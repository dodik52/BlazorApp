@page "/counter/settings"
@inject NavigationManager Nav

<div class="settings-wrapper">
    <button class="close-btn" @onclick="GoToTimer">
        <svg height="32" width="32" viewBox="0 0 24 24">
            <path fill="#D32F2F" d="M18.3 5.71a1 1 0 0 0-1.41 0L12 10.59l-4.89-4.88a1 1 0 1 0-1.41 1.41L10.59 12l-4.88 4.89a1 1 0 1 0 1.41 1.41L12 13.41l4.89 4.88a1 1 0 0 0 1.41-1.41L13.41 12l4.88-4.89a1 1 0 0 0 0-1.4z"></path>
        </svg>
    </button>
    <h2 class="settings-title">Настройки выбора ванны</h2>
    <div class="bath-list">
        @for (int i = 1; i <= 8; i++)
        {
            <div class="bath-card @(SelectedBath==i ? "bath-selected" : "")" @onclick="() => SelectBath(i)">
                <div class="bath-title">Ванна @i</div>
                <div class="bath-desc">
                    @if (i == 1 || i == 2)
                    {
                        <span>Обезжиривание — удаление жировых загрязнений с поверхности.</span>
                    }
                    else
                    {
                        <span>Фосфатизация — нанесение защитного фосфатного слоя.</span>
                    }
                </div>
            </div>
        }
    </div>
    <div class="bath-confirm">✓ Выбрана ванна №@SelectedBath (@(SelectedBath==1 || SelectedBath==2 ? "Обезжиривание" : "Фосфатирование"))</div>
</div>

@code {
    int SelectedBath { get; set; } = 1;

    void SelectBath(int bath) => SelectedBath = bath;

    void GoToTimer()
    {
        Nav.NavigateTo("/counter");
    }
}